#include<stdio.h>
#include<conio.h>
int main()
{
	int n,a,b,c,d;
	printf("Enter a 4 digit number");
	scanf("%d",&n);
	a=n%10;
	n=n/10;
	b=n%10;
	n=n/10;
	c=n%10;
	n=n/10;
	d=n;
	if (a>b&&a>c&&a>d)
	printf("A is greater digit");
	else if (b>a&&b>c&&b>d)
	printf("B is greater digit");
	else if (c>a&&c>b&&c>d)
	printf("C is greater digit");
	else
	printf("D is greater digit");
	getch();
}
